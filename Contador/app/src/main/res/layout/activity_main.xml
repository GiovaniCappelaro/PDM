<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/inicialRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RadioButton
            android:id="@+id/zeroRb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"
            android:text="0" />

        <RadioButton
            android:id="@+id/dezRb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"
            android:text="10" />

        <!--Deixa sÃ³ o peso marcar o tamanho -->
    </RadioGroup>

    

    <TextView
      android:id="@+id/contadorTv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/zero"
      android:textSize="64sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/inicialRg"
      app:layout_constraintBottom_toTopOf="@id/cliqueBt" />

    <Button
        android:id="@+id/cliqueBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clique"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>